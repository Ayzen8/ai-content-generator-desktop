{
  "name": "ai-content-generator-desktop",
  "version": "1.0.0",
  "description": "Desktop application for AI Content Generator - Create engaging content for social media",
  "author": "AI Content Generator Team",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run build:dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "npx webpack --mode production",
    "build:dev": "npx webpack --mode development",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "pack": "electron-builder --dir",
    "clean": "rimraf dist release",
    "rebuild": "npm run clean && npm run build",
    "test": "node tests/run-tests.js",
    "test:unit": "mocha tests/unit/**/*.test.js --require tests/setup.js --timeout 10000",
    "test:integration": "mocha tests/integration/**/*.test.js --require tests/setup.js --timeout 15000",
    "test:e2e": "mocha tests/e2e/**/*.test.js --require tests/setup.js --timeout 30000",
    "test:watch": "mocha tests/**/*.test.js --require tests/setup.js --watch --timeout 10000",
    "test:coverage": "nyc npm run test",
    "test:performance": "node tests/performance/benchmark.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "axios": "^1.10.0",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "css-loader": "^6.8.1",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "form-data": "^4.0.3",
    "fs-extra": "^11.3.0",
    "multer": "^2.0.1",
    "oauth": "^0.10.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite3": "^5.1.7",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.4.4",
    "twitter-api-v2": "^1.23.2",
    "typescript": "^5.1.6",
    "webpack": "^5.99.9",
    "webpack-cli": "^5.1.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.1",
    "chai": "^5.2.0",
    "compression-webpack-plugin": "^11.1.0",
    "electron": "^32.2.6",
    "electron-builder": "^25.1.8",
    "mocha": "^11.7.0",
    "rimraf": "^5.0.0",
    "sinon": "^21.0.0",
    "supertest": "^7.1.1",
    "terser-webpack-plugin": "^5.3.14",
    "wait-on": "^8.0.3",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "build": {
    "appId": "com.aicontentgenerator.desktop",
    "productName": "AI Content Generator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "server.js",
      "data/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
