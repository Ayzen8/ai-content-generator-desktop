{
  "name": "ai-content-generator-desktop",
  "version": "1.0.0",
  "description": "Desktop application for AI Content Generator with system tray service management",
  "main": "dist/main.js",
  "scripts": {
    "start": "node server.js",
    "electron": "electron .",
    "electron:dev": "electron dist/main.js",
    "build": "tsc",
    "build:electron": "electron-builder",
    "build:react": "tsc && webpack --mode production",
    "dev": "concurrently \"npm run build\" \"npm run start\" \"npm run electron:dev\"",
    "dev:watch": "concurrently \"npm run watch\" \"npm run start\" \"npm run electron:dev\"",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.4.1",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "fs-extra": "^11.3.0",
    "open": "^10.1.2",
    "@google/generative-ai": "^0.1.3",
    "dotenv": "^16.3.1",
    "sqlite3": "^5.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "cors": "^2.8.5",
    "webpack": "^5.88.0",
    "concurrently": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/express": "^4.17.17",
    "cross-env": "^7.0.3",
    "electron": "^25.9.8",
    "electron-builder": "^24.6.4",
    "electron-reload": "^1.5.0",
    "rimraf": "^5.0.0",
    "sharp": "^0.34.2",
    "to-ico": "^1.1.5",
    "typescript": "^5.1.6"
  },
  "build": {
    "appId": "com.aicontentgenerator.desktop",
    "productName": "AI Content Generator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "tray.png",
      "tray.ico",
      "assets/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "icon": "icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
